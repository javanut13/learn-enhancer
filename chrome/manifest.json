{
  "name": "Learn Enhancer",
  "version": "2.1.0",
  "manifest_version": 2,
  "content_scripts": [
    {
      "matches": [
        "http://learn.canterbury.ac.nz/*",
        "https://learn.canterbury.ac.nz/*"
      ],
      "js": [
        "pranks.js",
        "content.js"
      ],
      "run_at": "document_end"
    },
    {
      "matches": [
        "https://login.canterbury.ac.nz/idp/Authn/UserPassword"
      ],
      "js": [
        "login.js"
      ],
      "css": [
        "login.css"
      ],
      "run_at": "document_start"
    },
    {
      "matches": [
        "http://learn.canterbury.ac.nz/*",
        "https://learn.canterbury.ac.nz/*"
      ],
      "exclude_matches": [
        "http://learn.canterbury.ac.nz/pluginfile.php/*",
        "https://learn.canterbury.ac.nz/pluginfile.php/*"
      ],
      "css": [
        "content.css"
      ]
    }
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "permissions": [
    "webRequestBlocking",
    "webRequest",
    "storage",
    "http://learn.canterbury.ac.nz/*",
    "https://login.canterbury.ac.nz/idp/Authn/UserPassword"
  ],
  "icons": {
    "48": "48.png",
    "128": "128.png"
  },
  "options_page": "options.html"
}
